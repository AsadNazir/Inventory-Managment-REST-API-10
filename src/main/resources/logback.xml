<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>D:\Java projects\Project\src\main\java\myapp.log</file>
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.example.project" level="INFO"/>
    <root level="info">
        <appender-ref ref="FILE"/>
    </root>
</configuration>